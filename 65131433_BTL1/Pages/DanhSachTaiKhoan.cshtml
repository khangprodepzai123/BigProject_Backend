@page
@model DanhSachTaiKhoanModel
@{
    ViewData["Title"] = "Danh sách tài khoản";
}

<div class="page-header">
    <div class="container">
        <h1 class="display-5"><i class="bi bi-person-badge"></i> Danh sách tài khoản</h1>
    </div>
</div>

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form method="get" class="d-flex">
                        <input type="text" name="searchString" value="@Model.SearchString"
                               class="form-control me-2" placeholder="Tìm kiếm theo tên đăng nhập hoặc tên bệnh nhân...">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.TaiKhoans.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th>Mã TK</th>
                                <th>Tên đăng nhập</th>
                                <th>Mã BN</th>
                                <th>Tên bệnh nhân</th>
                                <th>Điểm tích lũy</th>
                                <th>Trạng thái liên kết</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tk in Model.TaiKhoans)
                            {
                                <tr>
                                    <td><strong>@tk.MaTk</strong></td>
                                    <td>@tk.TenDangNhap</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(tk.MaBn))
                                        {
                                            <span class="badge bg-info">@tk.MaBn</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa liên kết</span>
                                        }
                                    </td>
                                    <td>
                                        @if (tk.MaBnNavigation != null)
                                        {
                                            <strong>@tk.MaBnNavigation.HoTenBn</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có</span>
                                        }
                                    </td>
                                    <td>@(tk.DiemTichLuy ?? 0)</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(tk.MaBn))
                                        {
                                            <span class="badge bg-success">Đã liên kết</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Chưa liên kết</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-info"
                                                data-bs-toggle="modal"
                                                data-bs-target="#detailModal"
                                                data-matk="@tk.MaTk"
                                                data-tendangnhap="@tk.TenDangNhap"
                                                data-mabn="@(tk.MaBn ?? "N/A")"
                                                data-hotenbn="@(tk.MaBnNavigation?.HoTenBn ?? "N/A")"
                                                data-diem="@(tk.DiemTichLuy ?? 0)"
                                                title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)&searchString=@Model.SearchString">
                                    Trước
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?pageNumber=@i&searchString=@Model.SearchString">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)&searchString=@Model.SearchString">
                                    Sau
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <p class="text-center text-muted">
                        Trang @Model.CurrentPage / @Model.TotalPages (Tổng @Model.TotalItems tài khoản)
                    </p>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Chưa có tài khoản nào.
        </div>
    }
</div>

<!-- Modal Chi tiết -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-person-badge"></i> Chi tiết tài khoản</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Mã tài khoản:</strong> <span id="modalMaTk"></span></p>
                <p><strong>Tên đăng nhập:</strong> <span id="modalTenDangNhap"></span></p>
                <p><strong>Mã bệnh nhân:</strong> <span id="modalMaBn"></span></p>
                <p><strong>Tên bệnh nhân:</strong> <span id="modalHoTenBn"></span></p>
                <p><strong>Điểm tích lũy:</strong> <span id="modalDiem"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
    var detailModal = document.getElementById('detailModal');
    if (detailModal) {
        detailModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('modalMaTk').textContent = button.getAttribute('data-matk');
            document.getElementById('modalTenDangNhap').textContent = button.getAttribute('data-tendangnhap');
            document.getElementById('modalMaBn').textContent = button.getAttribute('data-mabn');
            document.getElementById('modalHoTenBn').textContent = button.getAttribute('data-hotenbn');
            document.getElementById('modalDiem').textContent = button.getAttribute('data-diem');
        });
    }
</script>

