@page
@model DanhSachBenhNhanModel
@{
    ViewData["Title"] = "Danh sách bệnh nhân";
}

<div class="page-header">
    <div class="container">
        <h1 class="display-5"><i class="bi bi-people"></i> Danh sách bệnh nhân</h1>
    </div>
</div>

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form method="get" class="d-flex">
                        <input type="text" name="searchString" value="@Model.SearchString"
                               class="form-control me-2" placeholder="Tìm kiếm theo họ tên...">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </form>
                </div>
                <div class="col-md-4 text-end">
                    <a href="/ThemBenhNhan" class="btn btn-success">
                        <i class="bi bi-person-plus"></i> Thêm bệnh nhân
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Mã BN</th>
                            <th>Họ và tên</th>
                            <th>Số điện thoại</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Đối tượng</th>
                            <th>Trạng thái khám</th>  <!-- ← THÊM DÒNG NÀY -->
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.BenhNhans.Any())
                        {
                            @foreach (var bn in Model.BenhNhans)
                            {
                                <tr>
                                    <td><strong>@bn.MaBn</strong></td>
                                    <td>@bn.HoTenBn</td>
                                    <td>@bn.Sdt</td>
                                    <td>@(bn.NgaySinh?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td>@(bn.Gt ?? "N/A")</td>
                                    <td>
                                        @if (bn.DoiTuong == "Bảo hiểm y tế")
                                        {
                                            <span class="badge bg-success">@bn.DoiTuong</span>
                                        }
                                        else if (bn.DoiTuong == "Miễn giảm")
                                        {
                                            <span class="badge bg-info">@bn.DoiTuong</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@(bn.DoiTuong ?? "N/A")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (bn.KhamBenh == null)
                                        {
                                            <span class="badge bg-secondary">Chưa khám</span>
                                        }
                                        else if (bn.KhamBenh.TrangThai == "Đang khám")
                                        {
                                            <span class="badge bg-warning text-dark">Đang khám</span>
                                        }
                                        else if (bn.KhamBenh.TrangThai == "Đã khám")
                                        {
                                            <span class="badge bg-info">Đã khám</span>
                                        }
                                        else if (bn.KhamBenh.TrangThai == "Đã thanh toán")
                                        {
                                            <span class="badge bg-success">Đã thanh toán</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@bn.KhamBenh.TrangThai</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <a asp-page="/DanhSachBenhNhan" asp-page-handler="TaoPhieuKham" asp-route-maBn="@bn.MaBn" class="btn btn-sm btn-success" title="Khám bệnh">
                                            <i class="bi bi-stethoscope"></i>
                                        </a>
                                        <!-- ← THÊM NÚT THANH TOÁN NÀY -->
                                        <a href="/ThanhToan?maBn=@bn.MaBn"
                                           class="btn btn-sm btn-primary"
                                           title="Thanh toán">
                                            <i class="bi bi-credit-card"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-info"
                                                data-bs-toggle="modal"
                                                data-bs-target="#detailModal"
                                                data-mabn="@bn.MaBn"
                                                data-hoten="@bn.HoTenBn"
                                                data-sdt="@bn.Sdt"
                                                data-ngaysinh="@(bn.NgaySinh?.ToString("dd/MM/yyyy") ?? "N/A")"
                                                data-gt="@(bn.Gt ?? "N/A")"
                                                data-doituong="@(bn.DoiTuong ?? "N/A")"
                                                data-diachi="@(bn.DiaChi ?? "N/A")"
                                                data-bhyt="@(bn.Bhyt ?? "N/A")"
                                                title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <a href="/SuaBenhNhan?maBn=@bn.MaBn" class="btn btn-sm btn-warning" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="/XoaBenhNhan?maBn=@bn.MaBn" class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="bi bi-inbox"></i> Không có bệnh nhân nào
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)&searchString=@Model.SearchString">
                                Trước
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?pageNumber=@i&searchString=@Model.SearchString">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)&searchString=@Model.SearchString">
                                Sau
                            </a>
                        </li>
                    </ul>
                </nav>

                <p class="text-center text-muted">
                    Trang @Model.CurrentPage / @Model.TotalPages (Tổng @Model.TotalItems bệnh nhân)
                </p>
            }
        </div>
    </div>
</div>

<!-- Modal Chi tiết -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-person-badge"></i> Thông tin chi tiết bệnh nhân</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted">Mã bệnh nhân:</label>
                        <p class="fw-bold" id="modal-mabn"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted">Họ và tên:</label>
                        <p class="fw-bold" id="modal-hoten"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted">Số điện thoại:</label>
                        <p id="modal-sdt"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted">Ngày sinh:</label>
                        <p id="modal-ngaysinh"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted">Giới tính:</label>
                        <p id="modal-gt"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted">Đối tượng:</label>
                        <p id="modal-doituong"></p>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="text-muted">Địa chỉ:</label>
                        <p id="modal-diachi"></p>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="text-muted">Số BHYT:</label>
                        <p id="modal-bhyt"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Xử lý modal chi tiết
        var detailModal = document.getElementById('detailModal');
        detailModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('modal-mabn').textContent = button.getAttribute('data-mabn');
            document.getElementById('modal-hoten').textContent = button.getAttribute('data-hoten');
            document.getElementById('modal-sdt').textContent = button.getAttribute('data-sdt');
            document.getElementById('modal-ngaysinh').textContent = button.getAttribute('data-ngaysinh');
            document.getElementById('modal-gt').textContent = button.getAttribute('data-gt');
            document.getElementById('modal-doituong').textContent = button.getAttribute('data-doituong');
            document.getElementById('modal-diachi').textContent = button.getAttribute('data-diachi');
            document.getElementById('modal-bhyt').textContent = button.getAttribute('data-bhyt');
        });
    </script>
}