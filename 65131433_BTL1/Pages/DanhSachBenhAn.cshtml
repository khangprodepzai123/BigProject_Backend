@page
@model DanhSachBenhAnModel
@{
    ViewData["Title"] = "Hồ sơ bệnh án";
}

<div class="page-header">
    <div class="container">
        <h1 class="display-5"><i class="bi bi-file-earmark-medical"></i> Hồ sơ bệnh án</h1>
    </div>
</div>

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form method="get" class="d-flex">
                        <input type="text" name="searchString" value="@Model.SearchString"
                               class="form-control me-2" placeholder="Tìm kiếm theo tên bệnh nhân...">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.BenhAns.Any())
    {
        @foreach (var benhAn in Model.BenhAns)
        {
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">
                                <i class="bi bi-file-earmark-medical"></i> 
                                Bệnh án: <strong>@benhAn.MaBenhAn</strong> - 
                                <strong>@benhAn.MaBnNavigation.HoTenBn</strong>
                            </h5>
                        </div>
                        <div class="col-md-6 text-end">
                            <small>
                                <i class="bi bi-calendar"></i> Ngày khám: @(benhAn.NgayKham?.ToString("dd/MM/yyyy") ?? "N/A") | 
                                <i class="bi bi-clock"></i> Lưu: @(benhAn.NgayLuu?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                            </small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Mã khám:</strong> @benhAn.MaKham</p>
                            <p><strong>Bác sĩ khám:</strong> @benhAn.MaBsNavigation?.HoTenBs</p>
                            <p><strong>Loại khám:</strong> @(benhAn.LoaiKham ?? "N/A")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Lý do khám:</strong> @(benhAn.LyDoKham ?? "N/A")</p>
                            <p><strong>Chuẩn đoán:</strong> @(benhAn.ChuanDoan ?? "N/A")</p>
                            <p><strong>Xử trí khám:</strong> @(benhAn.XuTriKham ?? "N/A")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(benhAn.QuaTrinhBenhLy))
                    {
                        <div class="mb-3">
                            <strong>Quá trình bệnh lý:</strong>
                            <p class="text-muted">@benhAn.QuaTrinhBenhLy</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(benhAn.KhamBoPhan))
                    {
                        <div class="mb-3">
                            <strong>Khám bộ phận:</strong>
                            <p class="text-muted">@benhAn.KhamBoPhan</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(benhAn.HuongXuTri))
                    {
                        <div class="mb-3">
                            <strong>Hướng xử trí:</strong>
                            <p class="text-muted">@benhAn.HuongXuTri</p>
                        </div>
                    }

                    @if (benhAn.BenhAnToaThuocs.Any())
                    {
                        <div class="mb-3">
                            <strong><i class="bi bi-prescription2"></i> Toa thuốc:</strong>
                            <div class="table-responsive mt-2">
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Tên thuốc</th>
                                            <th>Số lượng</th>
                                            <th>Liều dùng</th>
                                            <th>Cách dùng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var thuoc in benhAn.BenhAnToaThuocs)
                                        {
                                            <tr>
                                                <td>@thuoc.MaThuocNavigation?.TenThuoc</td>
                                                <td>@thuoc.SoLuong</td>
                                                <td>@(thuoc.LieuDung ?? "N/A")</td>
                                                <td>@(thuoc.CachDung ?? "N/A")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)&searchString=@Model.SearchString">
                            Trước
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?pageNumber=@i&searchString=@Model.SearchString">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)&searchString=@Model.SearchString">
                            Sau
                        </a>
                    </li>
                </ul>
            </nav>

            <p class="text-center text-muted">
                Trang @Model.CurrentPage / @Model.TotalPages (Tổng @Model.TotalItems bệnh án)
            </p>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Chưa có bệnh án nào.
        </div>
    }
</div>

