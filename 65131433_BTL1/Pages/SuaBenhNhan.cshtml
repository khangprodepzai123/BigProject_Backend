@page
@model SuaBenhNhanModel
@{
    ViewData["Title"] = "Sửa thông tin bệnh nhân";
}

<div class="page-header">
    <div class="container">
        <h1 class="display-5"><i class="bi bi-pencil-square"></i> Sửa thông tin bệnh nhân</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (Model.BenhNhan == null)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> Không tìm thấy bệnh nhân!
                </div>
                <a href="/DanhSachBenhNhan" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form method="post">
                            <input type="hidden" asp-for="BenhNhan.MaBn" />

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="bi bi-card-text"></i> Mã bệnh nhân</label>
                                    <input type="text" class="form-control" value="@Model.BenhNhan.MaBn" disabled />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="bi bi-person"></i> Họ và tên <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" asp-for="BenhNhan.HoTenBn" required />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="bi bi-telephone"></i> Số điện thoại <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" asp-for="BenhNhan.Sdt" required />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="bi bi-calendar"></i> Ngày sinh</label>
                                    <input type="date" class="form-control" asp-for="BenhNhan.NgaySinh" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="bi bi-gender-ambiguous"></i> Giới tính</label>
                                    <select class="form-select" asp-for="BenhNhan.Gt">
                                        <option value="">-- Chọn giới tính --</option>
                                        <option value="Nam">Nam</option>
                                        <option value="Nữ">Nữ</option>
                                    </select>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label"><i class="bi bi-card-checklist"></i> Đối tượng</label>
                                    <select class="form-select" asp-for="BenhNhan.DoiTuong">
                                        <option value="">-- Chọn đối tượng --</option>
                                        <option value="Viện phí">Viện phí</option>
                                        <option value="Bảo hiểm y tế">Bảo hiểm y tế</option>
                                        <option value="Miễn giảm">Miễn giảm</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label class="form-label"><i class="bi bi-geo-alt"></i> Địa chỉ</label>
                                    <textarea class="form-control" asp-for="BenhNhan.DiaChi" rows="2"></textarea>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label class="form-label"><i class="bi bi-card-text"></i> Số bảo hiểm y tế</label>
                                    <input type="text" class="form-control" asp-for="BenhNhan.Bhyt" placeholder="Nhập số BHYT (nếu có)" />
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a href="/DanhSachBenhNhan" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Hủy bỏ
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save"></i> Cập nhật
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>